@model ESDLAPrueba.Models.ParticipantesViewModel
@using ESDLAPrueba.Models

@{
    ViewData["Title"] = "Participantes";
}

<h1>@ViewData["Title"]</h1>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-4.7.0" crossorigin="anonymous" />
<link rel="stylesheet" href="~/css/custom.css" />

<div class="text-end mb-3">
    <button class="btn btn-primary nuevo-jugador-btn">Nuevo Jugador</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Jugador</th>
            <th>Nick</th>
            <th>Bando</th>
            <th>Pago abonado</th>
            <th>Lista enviada</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Participantes.Count > 0)
        {
            foreach (var participante in Model.Participantes)
            {
                <tr>
                    <td>
                        <input type="text" class="form-control nombre-input editable-input" value="@participante.Nombre" readonly />
                    </td>
                    <td>
                        <input type="text" class="form-control nick-input editable-input" value="@participante.Nick" readonly />
                    </td>
                    <td>
                        @{
                            var bandoSeleccionado = "Luz";
                            var otroBando = "Oscuridad";
                        }
                        <select class="form-control bando-select editable-select" disabled>
                            <option value="@bandoSeleccionado" selected>@bandoSeleccionado</option>
                            <option value="@otroBando">@otroBando</option>
                        </select>
                    </td>
                    <td>
                        @{
                            var pagoAbonado = true;
                            var noPago = false;
                        }
                        <select class="form-control pago-select editable-select" disabled>
                            <option value="@pagoAbonado.ToString()" selected>@(pagoAbonado ? "Sí" : "No")</option>
                            <option value="@noPago.ToString()">@(!pagoAbonado ? "Sí" : "No")</option>
                        </select>
                    </td>
                    <td>
                        @{
                            var listaEnviada = true;
                            var noLista = false;
                        }
                        <select class="form-control lista-select editable-select" disabled>
                            <option value="@listaEnviada.ToString()" selected>@(listaEnviada ? "Sí" : "No")</option>
                            <option value="@noLista.ToString()">@(!listaEnviada ? "Sí" : "No")</option>
                        </select>
                    </td>
                    <td>
                        <button class="btn btn-link editar-btn" title="Editar"><i class="far fa-edit"></i></button>
                        <button class="btn btn-link eliminar-btn" title="Eliminar"><i class="far fa-trash-alt"></i></button>
                        <button class="btn btn-link guardar-btn" title="Guardar" style="display: none;"><i class="far fa-save"></i></button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No hay participantes registrados.</td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/custom.js"></script>
































