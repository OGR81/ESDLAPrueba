@model MESBG.Models.HomeViewModel
@using MESBG.Models

@{
    ViewData["Title"] = "Bienvenido al torneo del señor de los anillos";
}

<h1 class="text-center">@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(ViewData["Mensaje"] as string))
{
    <div class="alert alert-success text-center">@ViewData["Mensaje"]</div>
}

<div class="text-center">
    <form asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="cargaImagen">Subir imagen:</label>
            <input type="file" class="form-control-file" id="cargaImagen" name="cargaImagen">
        </div>
        <div class="form-group">
            <label for="evento">Detalle del evento:</label>
            <input type="text" class="form-control" id="evento" name="evento">
        </div>
        <button type="submit" class="btn btn-primary">Subir</button>
    </form>
</div>

@if (!string.IsNullOrEmpty(Model.Imagen))
{
    <h3 class="text-center">Imagen subida:</h3>
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <img src="~/images/@Model.Imagen" class="img-thumbnail" alt="Imagen subida">
        </div>
        <div class="col-md-6">
            <h4>Detalle del evento:</h4>
            <p>@Model.DetalleEvento</p>
        </div>
    </div>
}














